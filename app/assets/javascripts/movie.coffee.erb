$ ->
  sort_by_title_direction = "desc"

  $('a.link-sort-title').click ->
    sort_by_title_direction = if sort_by_title_direction == 'asc' then 'desc' else 'asc'

    $.ajax
      type: 'GET'
      url: '/search'
      data:
        sort_by: "original_title." + sort_by_title_direction
        page: 1
      success: (data) ->
        console.log data
        return
      error: (e) ->
        console.log e
        return
    false